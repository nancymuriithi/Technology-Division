{{#partial "content"}}

    <div class="container">
        <div class="row top">
            <div class="column col-md-7">
                <h1 align="center">Staff Information Update Form</h1>
            </div>
            <div class="column col-md-2">

            </div>

        </div>
    </div>
    <hr>
    <div class="container">
        <h2>Fill in the below details to update a member's information.</h2>
        <p>Add a new Member:</p>


        <form action="/posts/new" method="POST">

            <fieldset>
                <legend>Staff information:</legend>
            <div class="form-group">
                <label for="staff">Name&nbsp&nbsp&nbsp&nbsp</label>
                <input id="staff_name" name="staff_name" class="form-control" type="text">
            </div>
            <div class="form-group">
                <label for="department">Department&nbsp&nbsp&nbsp&nbsp</label>
                <input id="department" name="department" class="form-control" type="text">
            </div>
            <div class="form-group">
                <label for="section">Section&nbsp&nbsp&nbsp&nbsp</label>
                <input id="section" name="section" class="form-control" type="text">
            </div>
            <div class="form-group">
                <label for="role">Role&nbsp&nbsp&nbsp&nbsp</label>
                <input id="role" name="role" class="form-control" type="text">
            </div>
            <div class="form-group">
                <label for="responsibilities">Responsibilities&nbsp</label>
                <input id="responsibilities" name="responsibilities" class="form-control" type="textarea" rows="20" >
            </div>
            <button type="submit" class="btn-info">Update!</button>
            </fieldset>
        </form>
    </div>
{{/partial}}

{{> layout.hbs}}